general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "disk /"
order += "disk /home"
order += "disk /chest"

disk "/" {
     format = "/  %avail"
}
disk "/chest" {
     format = "c  %avail"
}
disk "/home" {
     format = "h  %avail"
}

order += "ethernet _first_"

ethernet _first_ {
         format_up = "%ip"
         format_down = "E: down"
}

order += "cpu_usage"

cpu_usage {
          format = "cpu: %usage"
}

order += "tztime local"

tztime local {
       format = "%a %m-%d%t%T"
}